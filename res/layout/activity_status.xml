<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pmitev.chatterbox.activities.StatusActivity">

    <include   android:id="@+id/status_app_toolbar"
        layout="@layout/main_tool_bar"></include>

    <Button
        android:id="@+id/save_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="209dp"
        android:layout_marginRight="10dp"
        android:background="?android:attr/colorAccent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/save_status"
        android:textColor="#ffffff" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_status_button"
        android:layout_alignEnd="@+id/save_status_button"
        android:layout_alignRight="@+id/save_status_button"
        android:layout_marginBottom="30dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Share your Status" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
