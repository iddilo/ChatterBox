<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UsersActivity">

    <include
        android:id="@+id/users_app_toolbar"
        layout="@layout/main_tool_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/users_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="180dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Find your Buddie"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/search_input_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_text"
        android:layout_marginLeft="10dp"
        android:background="@drawable/search_text_background"
        android:ems="10"
        android:hint="Search Friends..."
        android:inputType="textMultiLine"
        android:padding="18dp"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light" />

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_input_text"
        android:layout_alignEnd="@+id/search_text"
        android:layout_marginRight="10dp"
        android:background="@drawable/search_text_background"
        android:padding="8dp"
        app:srcCompat="@android:drawable/ic_search_category_default" />

</RelativeLayout>