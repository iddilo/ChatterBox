<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_pic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/harlequine" />

    <TextView
        android:id="@+id/message_bubble"
        android:layout_width="wrap_content"


        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_profile_pic"

        android:layout_alignStart="@+id/message_name_layout"
        android:padding="2dp"
        android:text="text message"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/message_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/message_profile_pic"
        android:layout_marginStart="84dp"
        android:padding="2dp"
        android:text="Display Name" />

    <TextView
        android:id="@+id/time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:padding="1dp"
        android:text="00:00" />




    <ImageView
        android:id="@+id/image_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/message_bubble"
        android:layout_below="@+id/message_bubble"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/message_profile_pic"
        android:padding="0dp"
        android:scaleType="centerCrop" />


</RelativeLayout>